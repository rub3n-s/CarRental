@using A.ViewModels
@model PesquisaDataVeiculoViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-controller="Veiculos" asp-action="SearchDate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="DataEntrega" class="control-label"></label>
                <input asp-for="DataEntrega" class="form-control" />
                <span asp-validation-for="DataEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataLevanta" class="control-label"></label>
                <input asp-for="DataLevanta" class="form-control" />
                <span asp-validation-for="DataLevanta" class="text-danger"></span>
            </div>
           
           
            <div class="form-group">
                <label asp-for="Local" class="control-label"></label>
                <input asp-for="Local" class="form-control" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group justify-content-center align-items-center" style="margin-top:0.5em;">
                <input type="submit" value="Pesquisar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>