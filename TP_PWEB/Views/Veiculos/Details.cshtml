@model A.Models.Veiculo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Veiculo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
     
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Disponivel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Disponivel)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoResumida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoResumida)
        </dd>
   
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoDiario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoDiario)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
    </dl>
</div>

<div>
    @if (User.IsInRole("Gestor") || User.IsInRole("Funcionario"))
    {
        <a asp-action="Index"><input class="btn btn-info" value="Voltar"/></a>
    }
    else if (User.IsInRole("Cliente"))
    {
        <input type="button" class="btn btn-success mt-5" value="Reservar Agora" onclick="@("window.location.href='" + Url.Action("CreateFromDetails", "Reservas", new { id = @Model.Id }) + "'");" />
    }
</div>