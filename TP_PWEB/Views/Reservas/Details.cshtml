@model A.Models.Reserva

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataEntrega)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataEntrega)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataLevantamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataLevantamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Veiculo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Veiculo.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Empresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Empresa.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUserId)
        </dd>
        <!-- Entrega -->
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Entrega)
        </dt>
        <dd class="col-sm-10">
            KM: @Html.DisplayFor(model => model.Entrega.NumKM)  <br/>
            Danos: @Html.DisplayFor(model => model.Entrega.Danos)   <br/>
            Observações: @Html.DisplayFor(model => model.Entrega.Observacoes)   <br/>
            Funcionário: @Html.DisplayFor(model => model.Entrega.FuncionarioEmail)  <br/>
        </dd>
        <!-- Levantamento -->
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Levantamento)
        </dt>
        <dd class="col-sm-10">
            KM: @Html.DisplayFor(model => model.Levantamento.NumKM)  <br/>
            Danos: @Html.DisplayFor(model => model.Levantamento.Danos)   <br/>
            Observações: @Html.DisplayFor(model => model.Levantamento.Observacoes)   <br/>
            Funcionário: @Html.DisplayFor(model => model.Levantamento.FuncionarioEmail)  <br/>
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Cliente"))
    {
        <a asp-action="ListReservas">Voltar</a>
    }
    else
    {
        <a asp-action="Index">Voltar</a>
    }
</div>