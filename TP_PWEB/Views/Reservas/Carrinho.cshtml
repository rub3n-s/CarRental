@model A.CartModels.Carrinho
<h1>Carrinho de Compras</h1>
Items no carrinho: <span class="badge bg-secondary">@Model.items.Count</span>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Item</th>
            <th>Preço Unitário</th>
            <th>Quantidade</th>
            <th>Sub-total</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.items.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-danger">Não existem produtos no carrinho!</td>                
            </tr>
        }
        @foreach (var item in Model.items)
        {
            <tr>
                <td>@item.ReservaId</td>
                <td>@item.PrecoUnit</td>
                <td>@item.Quantidade</td>
                <td>@(item.PrecoUnit*item.Quantidade)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-end">Total</th>
            <td>@Model.Total()</td>
        </tr>
    </tfoot>

</table>
<div class="row">
    <div class="col-12 text-end ">
        <a href="/Veiculos/ListVeiculos" class="btn btn-primary">Continuar a Comprar</a>
        <a href="/Veiculos/ListVeiculos" class="btn btn-success">Pagar</a>
    </div>

</div>


