@model List<A.ViewModels.ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Alterar Role do utilizador: <span class="badge bg-dark text-white">@ViewBag.UserName</span></h2>
            
        </div>
        <div class="card-body">
            <h5>Escolha o(s) role(s) para o utilizador </h5>
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
          
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Atualizar" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="Index" 
               class="btn btn-primary" style="width:auto">Cancelar</a>>
        </div>
    </div>
</form>